{
  "name": "tui2",
  "version": "1.0.3",
  "author": {
    "name": "Thor Qin",
    "email": "thor.qin@outlook.com"
  },
  "description": "HTML UI framework.",
  "license": "MIT",
  "keywords": [
    "ui",
    "browser",
    "framework",
    "modular"
  ],
  "repository": {
    "type": "git",
    "url": "https://git.oschina.net/thor.qin/TUI-2.git"
  },
  "bugs": {
    "url": "https://git.oschina.net/thor.qin/TUI-2/issues",
    "email": "thor.qin@qq.com"
  },
  "devDependencies": {
    "uglifyjs": "latest",
    "fs-extra-cli": "latest",
    "http-server": "latest",
    "less": "latest",
    "less-plugin-clean-css": "latest",
    "typescript": "latest",
    "watch": "latest",
    "npm-run-all": "latest"
  },
  "scripts": {
    "build:ts": "tsc --sourceRoot src && cd dist && uglifyjs tui2.js > tui2.min.js --compress --support-ie8 --source-map tui2.min.js.map",
    
    "prebuild:less": "fsys --task=remove --fileFolder=dist/less && fsys --task=copy --filesFolders=less --destination=dist --clobber='true' --preserveTimestamps='false'",
    "build:less": "cd dist && lessc less/tui2.less tui2.css --clean-css=\"--s1 --advanced --compatibility=ie8\" --source-map",
    
    "prebuild": "fsys --task=emptyDir --dir=dist",
    "build": "npm run build:ts && npm run build:less",
    "postbuild": "fsys --task=copy --filesFolders=lang,src --destination=dist --clobber='true' --preserveTimestamps='false'",
    
    "watch:less": "watch \"npm run build:less\" less -d -u",
    "watch:ts": "watch \"npm run build:ts\" src -d -u",
    
    "server": "http-server -a 0.0.0.0 -p 8000",
    "start": "npm-run-all --parallel watch:* server"
  }
}
